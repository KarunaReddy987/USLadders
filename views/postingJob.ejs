<% include partials/header %>
<% include partials/navbar %>


<h1>Hiring? Post your Job here!! </h1>

<% if(errors != undefined){ %>
<ul>
<% errors.forEach(function(error){ %>
<li> <%= error.msg %> </li>
<% }) %>
</ul>

<% } %>
<form method ="POST" action = "/users/add" >
<br>
<label> Company Name  </label>
<input type="text" name="company_name" class="form-control" placeholder="Company Name">
<br>
<label> Company ID </label>
<input type="text" name="company_id" class="form-control" placeholder="Company ID">
<br>
<label> Employee Name </label>
<input  type="text" name= "employee_name" class="form-control" placeholder="Employee Name">
<br>
<label> Job Category </label>
<br>
<select class="form-control">
  <option>Computer Science</option>
  <option>Finance</option>
  <option>Accounting</option>
  <option>Health Science</option>
  <option>Mangement</option>
</select>
<br>
<label> Job Description </label>
<textarea name="job_description" class="form-control" rows="3" placeholder="Description"></textarea>
<br>
<label> Qualifications Required</label>
<textarea name="qualifications" class="form-control" rows="3" placeholder="Description"></textarea>
<br>
<label> Providing H1 </label>
<br>
<label class="radio-inline">
  <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> Yes
</label>
<label class="radio-inline">
  <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> NO
</label>
<br>
<br>
<label> Experience Required </label>
<br>
<select class="form-control">
  <option>0-1 yrs</option>
  <option>1-2 yrs</option>
  <option>2-3 yrs</option>
  <option>3-4 yrs</option>
  <option>More than 4 yrs</option>
</select>
<br>
<label>Contact Details</label>
<textarea name="contact_details" class="form-control" rows="3" placeholder="Contact Details"></textarea>
<br>
<br>
<input type= "submit" name="Submit" class="btn btn-success">
</form>

<ul>
<% users.forEach(function(user){ %>
<li> Company: <%= user.company_name %> <br> Company ID: <%=user.company_id %> <br> Employee Name: <%=user.employee_name %> <br> Job Description <%=user.job_description %>
<br> Qualifications required: <%=user.qualifications %>
<br> Click here to delete this Job - <a href = "postingJob" class="deleteUser" data-id="<%= user._id %>" > Delete </a> </li>
<% }) %>
</ul>


<% include partials/footer %>
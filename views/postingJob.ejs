<% include partials/header %>
<% include partials/navbar %>


<h1>Hiring? Post your Job here!! </h1>

<% if(errors != undefined){ %>
<ul>
<% errors.forEach(function(error){ %>
<li> <%= error.msg %> </li>
<% }) %>
</ul>

<% } %>
<form method ="POST" action = "/jobs/add" >
<br>
<label> Company Name  </label>
<input type="text" name="company_name" required class="form-control" placeholder="Company Name">
<br>
<label> Company ID </label>
<input type="text" name="company_id" required class="form-control" placeholder="Company ID">
<br>
<label> Employee Name </label>
<input  type="text" name= "employee_name" required class="form-control" placeholder="Employee Name">
<br>
<label> Job Category </label>
<br>
<select type="text" name="job_category" required class="form-control">
  <option>Computer Science</option>
  <option>Finance</option>
  <option>Accounting</option>
  <option>Health Science</option>
  <option>Mangement</option>
</select>
<br>
<label> Job Description </label>
<textarea name="job_description" required="required" class="form-control" rows="3" placeholder="Description"></textarea>
<br>
<label> Qualifications Required</label>
<textarea name="qualifications" required="required" class="form-control" rows="3" placeholder="Description"></textarea>
<br>
<label> Providing H1 </label>
<br>
<label class="radio-inline">
  <input type="radio" name="inlineRadioOptions" id="inlineRadio1" checked value="option1"> Yes
</label>
<label class="radio-inline">
  <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> NO
</label>
<br>
<br>
<label> Experience Required </label>
<br>
<select name="experience" class="form-control">
  <option>0-1 yrs</option>
  <option>1-2 yrs</option>
  <option>2-3 yrs</option>
  <option>3-4 yrs</option>
  <option>More than 4 yrs</option>
</select>
<br>
<label>Contact Details</label>
<textarea name="contact_details" required="required" class="form-control" rows="3" placeholder="Contact Details"></textarea>
<br>
<br>
<input type= "submit" name="Submit" class="btn btn-success">
</form>

<ul>
<% jobs.forEach(function(job){ %>
<li> Company: <%= job.company_name %> <br> Company ID: <%=job.company_id %> <br> Employee Name: <%=job.employee_name %> 
<br> Job Category: <%= job.job_category %> <br> Job Description: <%=job.job_description %> 
<br> Qualifications required: <%=job.qualifications %>  <br> Experience Required: <%=job.experience %>
<br> Contact Details: <%=job.contact_details %>

<br> Click here to delete this Job - <a href = "postingJob" class="deleteUser" data-id="<%= job._id %>" > Delete </a> </li> <br> <br>
<% }) %>
</ul>


<% include partials/footer %>
